{
  "name": "enginescript/simple-wp-optimizer",
  "description": "Simple WP Optimizer - A lightweight WordPress optimization plugin",
  "type": "wordpress-plugin",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "EngineScript",
      "email": "support@enginescript.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "yoast/phpunit-polyfills": "^4.0",
    "wp-coding-standards/wpcs": "^3.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "php-stubs/wordpress-stubs": "^6.8",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpstan/phpstan": "^1.0",
    "10up/wp_mock": "^1.0",
    "mockery/mockery": "^1.5",
    "phpunit/php-code-coverage": "^9.2"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml --coverage-text",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "test:watch": "phpunit --watch",
    "coverage:check": "phpunit --coverage-clover=coverage.xml --colors=never && php scripts/coverage-check.php 80",
    "phpcs": "phpcs",
    "phpcs:tests": "phpcs --standard=tests/phpcs.xml tests/",
    "phpcbf": "phpcbf",
    "phpstan": "phpstan analyse"
  }
}
